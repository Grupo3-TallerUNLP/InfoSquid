{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Nueva Plantilla</h1>
    </div>

    {{ form_start(form) }}
		{{ form_errors(form) }}
		
		{{ form_row(form.nombre) }}
		{{ form_row(form.descripcion) }}
		{% for f in form.filtros %}
			{{ form_row(f.nombre) }}
		{% endfor %}

        <p>
            {{ form_widget(form.submit) }}
			<a href="{{ path('plantilla') }}" class="btn btn-default">
				Cancelar
			</a>
		</p>
		{{ form_end(form) }}		
{% endblock %}
