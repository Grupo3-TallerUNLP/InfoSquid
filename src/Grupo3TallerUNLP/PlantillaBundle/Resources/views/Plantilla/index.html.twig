{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Plantillas</h3>
    </div>

    <p>
		<a href="{{ path('plantilla_new') }}"class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span> Agregar Plantilla
        </a>
    </p>
	
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th class="col-xs-1">Acciones</th>				
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                        <a href="{{ path('plantilla_edit', { 'id': entity.id }) }}"title="Editar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-pencil text-primary"></span>
						</a>
                  
                        <a href="{{ path('plantilla_show', { 'id': entity.id }) }}"title="Eliminar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	
	<nav class="text-center">
        {{ knp_pagination_render(pagination) }}
    </nav>
	
    {% endblock %}
