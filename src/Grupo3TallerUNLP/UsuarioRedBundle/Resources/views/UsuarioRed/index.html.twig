{% extends '::dashboard.html.twig' %}

{% block content%}
	
	<h3> Usuarios de Red </h3>
	<ul>
        <li>
            <a href="{{ path('usuariored_new') }}">
                Agregar Usuario
            </a>
        </li>
    </ul>

    <table class="table table-striped" >
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cargo </th>
                <th>Dni</th>
				<th>Oficina</th>
				<th>Host</th>
                <th>Mostrar</th>
				<th>Editar</th>
				<th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombre }} </td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.cargo }} </td>
                <td>{{ entity.dNI }} </td>
				<td>
                        <a href="">Ver Oficina</a>
                </td>
				<td>
                        <a href="">Ver Host</a>
                </td>
                <td>
                    <a href="{{ path('usuariored_show', { 'id': entity.id }) }}">Ver</a>
                </td>
				<td>
				    <a href="{{ path('usuariored_edit', { 'id': entity.id }) }}">Editar</a>
                </td>
				<td>
					<a href="">Eliminar</a>
				</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  
    {% endblock %}
