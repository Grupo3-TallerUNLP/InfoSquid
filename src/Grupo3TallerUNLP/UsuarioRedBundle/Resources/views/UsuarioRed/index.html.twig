{% extends '::dashboard.html.twig' %}

{% block content %}

	<div class="page-header">
        <h1>Usuarios de Red</h1>
    </div>

	<p>
        <a href="{{ path('usuariored_new') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span> Agregar Usuario
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cargo </th>
                <th>Dni</th>
                <th>Usuario de Sistema</th>
				<th>Oficina</th>
				<th>Host</th>
                <th class="col-xs-1">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.nombre }} </td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.cargo }} </td>
                <td>{{ entity.dNI }} </td>
                <td>{{ entity.usuariosistema }} </td>
				<td>{{ entity.oficina }}</td>
				<td>
					{% if entity.hosts|length > 0 %}
					<a href="#" data-toggle="popover" data-content="<ul>{% for host in entity.hosts %}<li>{{ host }}</li>{% endfor %}</ul>">Ver</a>
					{% endif %}
				</td>
                <td>
				    <a href="{{ path('usuariored_edit', { 'id': entity.id }) }}" title="Editar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-pencil text-primary"></span>
                    </a>
					<a href="{{ path('usuariored_show', {'id': entity.id }) }}" title="Eliminar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    </a>
				</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav class="text-center">
        {{ knp_pagination_render(pagination) }}
    </nav>

	<script>
	window.onload = function () {
		$('[data-toggle="popover"]').popover({
			template: '<div class="popover" role="tooltip"><div class="arrow"></div><div class="popover-content"></div></div>',
			placement: 'top',
			html: true
		});
	};
	</script>

    {% endblock %}
