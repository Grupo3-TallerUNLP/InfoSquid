{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Sitios</h3>
    </div>

	<p>
        <a href="{{ path('sitio_new') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span> Agregar Sitio
        </a>
    </p>

     <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Url</th>
                <th>Grado de aceptaci√≥n</th>
				<th>Grupo</th>
                <th class="col-xs-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.gradoAceptacion }}</td>
                <td>{{ entity.grupo }} </td>
                <td>
                    <a href="{{ path('sitio_show', { 'id': entity.id }) }}" title="Ver" class="btn btn-default btn-xs">
                        <span class="text-primary">{{ icon('list') }}</span>
                    </a>
                    <a href="{{ path('sitio_edit', { 'id': entity.id }) }}" title="Editar" class="btn btn-default btn-xs">
                        <span class="text-primary">{{ icon('pencil') }}</span>
                    </a>
					<a href="{{ path('sitio_show_delete', {'id': entity.id }) }}" title="Eliminar" class="btn btn-default btn-xs">
                        <span class="text-danger">{{ icon('remove') }}</span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       <nav class="text-center">
        {{ knp_pagination_render(pagination) }}
    </nav>
    {% endblock %}
