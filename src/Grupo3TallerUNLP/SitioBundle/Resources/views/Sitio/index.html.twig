{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Sitios</h1>
    </div>

	<p>
        <a href="{{ path('sitio_new') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span> Agregar Sitio
        </a>
    </p>

     <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Url</th>
				<th> Grupo </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.grupo }} </td>
                <td>
                        <a href="{{ path('sitio_edit', { 'id': entity.id }) }}" title="Editar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-pencil text-primary"></span>
                    </a>
					<a href="{{ path('sitio_show', {'id': entity.id }) }}" title="Eliminar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       <nav class="text-center">
        {{ knp_pagination_render(pagination) }}
    </nav>
    {% endblock %}
