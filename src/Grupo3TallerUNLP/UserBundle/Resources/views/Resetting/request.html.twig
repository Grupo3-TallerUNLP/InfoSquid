{% extends 'Grupo3TallerUNLPUserBundle::layout.html.twig' %}

{% block fos_user_content %}
{% stylesheets '@Grupo3TallerUNLPUserBundle/Resources/public/css/login.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" />
{% endstylesheets %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-signin" role="form">
    <h3 class="form-signin-heading">Resetear Contraseña</h3>
    {% if invalid_username is defined %}
        <p>El usuario o dirección de email "{{ invalid_username }}" no existe</p>
    {% endif %}
    <input type="text" name="username" class="form-control" placeholder="Usuario o email" required autofocus />
    <br />
    <button class="btn btn-primary" type="submit">Resetear Contraseña</button>
	<a href="{{ path('fos_user_profile_show') }}" class="btn btn-default">Cancelar</a>
</form>

{% endblock fos_user_content %}
