{% extends '::dashboard.html.twig' %}

{% block content %}
<div class="page-header">
    <h3>Editar Mi Cuenta</h3>
</div>

{{ form_start(form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 7 }) }}

    <div class="form-group">
        <label for="fos_user_profile_form_usuarioRed_nombre" class="control-label col-lg-3">Nombre</label>
        <div class="col-lg-7">
            {{ form_widget(form.usuarioRed.nombre) }}
        </div>
    </div>

    <div class="form-group">
        <label for="fos_user_profile_form_usuarioRed_apellido" class="control-label col-lg-3">Apellido</label>
        <div class="col-lg-7">
            {{ form_widget(form.usuarioRed.apellido) }}
        </div>
    </div>

    <div class="form-group">
        <label for="fos_user_profile_form_email" class="control-label col-lg-3">Email</label>
        <div class="col-lg-7">
            {{ form_widget(form.email) }}
        </div>
    </div>

    <div class="form-group">
        <label for="fos_user_profile_form_usuarioRed_cargo" class="control-label col-lg-3">Cargo</label>
        <div class="col-lg-7">
            {{ form_widget(form.usuarioRed.cargo) }}
        </div>
    </div>

    <div class="form-group">
        <label for="fos_user_profile_form_usuarioRed_dNI" class="control-label col-lg-3">DNI</label>
        <div class="col-lg-7">
            {{ form_widget(form.usuarioRed.dNI) }}
        </div>
    </div>

    <div class="form-group">
        <label for="fos_user_profile_form_current_password" class="control-label col-lg-3">Contrase√±a Actual</label>
        <div class="col-lg-7">
            {{ form_widget(form.current_password) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-7">
            <button type="submit" class="btn btn-primary">Guardar</button>
			<a href="{{ path('fos_user_profile_show') }}" class="btn btn-default">Cancelar</a>
        </div>
    </div>
{{ form_end(form) }}
{% endblock content %}
