{% extends 'Grupo3TallerUNLPUserBundle::layout.html.twig' %}

{% block fos_user_content %}

{% stylesheets '@Grupo3TallerUNLPUserBundle/Resources/public/css/login.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" />
{% endstylesheets %}

<form action="{{ path('fos_user_security_check') }}" method="post" class="form-signin" role="form">
    <h2 class="form-signin-heading">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h2>
    {% if error %}
        <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <input type="text" id="username" class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'Grupo3TallerUNLPUserBundle') }}" name="_username" value="{{ last_username }}" required autofocus />
    <input type="password" id="password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'Grupo3TallerUNLPUserBundle') }}" name="_password" required />
    <label for="remember_me" class="checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        <small><span class="glyphicon glyphicon-log-in"></span></small> {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
    </button>
    <h6 class="pull-right"><a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.forgot'|trans({}, 'Grupo3TallerUNLPUserBundle') }}</a></h6>
</form>

{% endblock fos_user_content %}
