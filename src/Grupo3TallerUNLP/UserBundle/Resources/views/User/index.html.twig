{% extends '::dashboard.html.twig' %}

{% block content %}
	<div class="page-header">
        <h1>Usuarios de Sistema</h1>
    </div>

	<p>
        <a href="{{ path('grupo3_taller_unlp_user_new') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span> Agregar Usuario
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Activado</th>
                <th>Administrador</th>
                <th class="col-xs-1">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.username }} </td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.enabled %}{{ icon('ok') }}{% else %}{{ icon('remove') }}{% endif %}</td>
                <td>{% if entity.administrador %}{{ icon('ok') }}{% else %}{{ icon('remove') }}{% endif %}</td>
                <td>
				    <a href="{{ path('grupo3_taller_unlp_user_edit', { 'id': entity.id }) }}" title="Editar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-pencil text-primary"></span>
                    </a>
					<a href="{{ path('grupo3_taller_unlp_user_show', {'id': entity.id }) }}" title="Eliminar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    </a>
				</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav class="text-center">
        {{ knp_pagination_render(pagination) }}
    </nav>

	<script>
	window.onload = function () {
		$('[data-toggle="popover"]').popover({
			template: '<div class="popover" role="tooltip"><div class="arrow"></div><div class="popover-content"></div></div>',
			placement: 'top',
			html: true
		});
	};
	</script>
{% endblock content %}
