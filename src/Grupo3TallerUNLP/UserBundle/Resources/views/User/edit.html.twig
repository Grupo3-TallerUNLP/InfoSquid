{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Editar Usuario de Red</h1>
    </div>

    {{ form_start(edit_form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 7 }) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            <label class="control-label col-lg-3">Usuario</label>
            <div class="col-lg-7">
                <p class="form-control-static">{{ entity.username }}</p>
            </div>
        </div>

        {{ form_row(edit_form.email) }}
        {{ form_row(edit_form.usuariored) }}
        <div class="col-lg-offset-3 col-lg-7">{{ form_row(edit_form.enabled) }}</div>
        <div class="col-lg-offset-3 col-lg-7">{{ form_row(edit_form.administrador) }}</div>

        <div class="col-lg-offset-3 col-lg-7">
            <p>
                {{ form_widget(edit_form.submit) }}
                <a href="{{ path('grupo3_taller_unlp_user') }}" class="btn btn-default">Cancelar</a>
            </p>
        </div>

    {{ form_end(edit_form) }}
{% endblock content %}
