{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Informe Predefinido</h3>
    </div>

    <dl class="dl-horizontal">
            <dt>Nombre</dt>
            <dd>{{ entity.nombre }}</dd>

			{% if is_granted('ROLE_ADMIN') %}
				<dt>Propietario</td>
				<dd>{{ entity.getPlantilla().getUsuarioSistema().getUsuarioRed() }}</dd>
			{% endif %}
			
            <dt>Frecuenciatiempo</dt>
            <dd>{{ entity.frecuenciaTiempo }}</dd>
			
			<dt>Plantilla</dt>
            <dd>{{ entity.plantilla }}</dd>
			
			<dt> Proximo Envio </dt>
			<dd> {{ entity.proximoEnvio|date('d-m-Y') }} </dd>
			
    </dl>
    <div class="col-md-offset-1">
            <a href="{{ path('informepredefinido') }}" class="btn btn-primary">Volver</a>
    </div>
{% endblock %}
