{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Editar Informe Predefinido</h3>
    </div>

    {{ form_start(edit_form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 7 }) }}
		{{ form_errors(edit_form) }}

		{{ form_row(edit_form.nombre) }}
		{{ form_row(edit_form.frecuenciaTiempo) }}
		{{ form_row(edit_form.proximoEnvio) }}
		<div class="col-lg-offset-3 col-lg-7">
			<span class="help-block">Formato dd-mm-aaaa</span>
		</div>
		 <div class="form-group">
            <label class="control-label col-lg-3">Plantilla</label>
            <div class="col-lg-7">
                <p class="form-control-static">{{ entity.plantilla }}</p>
            </div>
        </div>
        <div class="col-lg-offset-3 col-lg-7">
            <p>
                {{ form_widget(edit_form.submit) }}
                <a href="{{ path('informepredefinido') }}" class="btn btn-default">Cancelar</a>
            </p>
        </div>
	
	
    	{{ form_end(edit_form) }}
{% endblock %}
