{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Editar Host</h1>
    </div>

    {{ form_start(edit_form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 7 }) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            <label for="grupo3tallerunlp_hostbundle_host_ipAddress_field1" class="control-label col-lg-3 required">
                Direcci√≥n IP
            </label>
            <div class="row col-lg-7">
                <div class="col-xs-3">{{ form_widget(edit_form.ipAddress_field1, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
                <div class="col-xs-3">{{ form_widget(edit_form.ipAddress_field2, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
                <div class="col-xs-3">{{ form_widget(edit_form.ipAddress_field3, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
                <div class="col-xs-3">{{ form_widget(edit_form.ipAddress_field4, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
            </div>
        </div>

        {{ form_row(edit_form.device) }}
        {{ form_row(edit_form.networkUsers) }}
        {{ form_row(edit_form.office) }}

        <div class="col-lg-offset-3 col-lg-7">
            <p>
                {{ form_widget(edit_form.submit) }}
                <a href="{{ path('grupo3_taller_unlp_admin_host') }}" class="btn btn-default">Cancelar</a>
            </p>
        </div>

    {{ form_end(edit_form) }}
{% endblock content %}
