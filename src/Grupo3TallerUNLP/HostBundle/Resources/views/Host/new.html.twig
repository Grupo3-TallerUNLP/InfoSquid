{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Nuevo Host</h3>
    </div>

    {{ form_start(form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 7 }) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <label for="grupo3tallerunlp_hostbundle_host_ipAddress_field1" class="control-label col-lg-3 required">
                Direcci√≥n IP
            </label>
            <div class="row col-lg-7">
                <div class="col-xs-3">{{ form_widget(form.ipAddress_field1, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
                <div class="col-xs-3">{{ form_widget(form.ipAddress_field2, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
                <div class="col-xs-3">{{ form_widget(form.ipAddress_field3, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
                <div class="col-xs-3">{{ form_widget(form.ipAddress_field4, {'attr': {'min': 0, 'max':255, 'step':1}}) }}</div>
            </div>
        </div>

        {{ form_row(form.device) }}
		
        {{ form_row(form.networkUsers) }}
		<div class="col-lg-offset-3 col-lg-7">
			<span class="help-block">Para seleccionar mas de un usuario de red, utilice ctrl+click</span>
		</div>
        {{ form_row(form.office) }}

        <div class="col-lg-offset-3 col-lg-7">
            <p>
                {{ form_widget(form.submit) }}
                <a href="{{ path('grupo3_taller_unlp_admin_host') }}" class="btn btn-default">Cancelar</a>
            </p>
        </div>

    {{ form_end(form) }}
{% endblock content %}
