{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Listado de Hosts</h1>
    </div>

    <p>
        <a href="{{ path('grupo3_taller_unlp_admin_host_new') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span> Agregar Host
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Direcci√≥n IP</th>
                <th>Usuarios de Red</th>
                <th>Oficina</th>
                <th class="col-xs-1">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.ipAddress }}</td>
                <td><a href="#">ver usuarios</a></td>
                <td>{{ entity.office }}</td>
                <td>
                    <a href="{{ path('grupo3_taller_unlp_admin_host_edit', { 'id': entity.id }) }}" title="Editar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-pencil text-primary"></span>
                    </a>
                    <a href="{{ path('grupo3_taller_unlp_admin_host_show', { 'id': entity.id }) }}" title="Eliminar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav class="text-center">
        {{ knp_pagination_render(pagination) }}
    </nav>

{% endblock content %}
