{% extends '::dashboard.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@Grupo3TallerUNLPPlantillaBundle/Resources/public/js/functions.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}

{% block content %}
    <div class="page-header">
        <h3>Generar Informe</h3>
    </div>

	<div class="clearfix" style="margin-bottom:30px">
		<div class="btn-group pull-left" data-toggle="buttons">
			<label class="btn btn-primary"><input type="radio" name="filtro1" value="plantillas" onchange="mostrarPlantilla()">Usar Plantillas</label>
			<label class="btn btn-primary"><input type="radio" name="filtro1" value="filtros" onchange="mostrarFiltros()">Elegir Filtros</label>
		</div>
		<div class="pull-left" style="margin-left:30px">
			<a href="{{ path('informe_home') }}" class="btn btn-default">Cancelar</a>
		</div>
	</div>
	<div id="div_plantillas" style="display: none;">{# oficina #}
		<table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th class="col-xs-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
			{% for p in plantillas %}
			<tr>
				<td> {{p.nombre}} </td>
				<td> {{p.descripcion}} </td>
				<td> <a href="{{ path('informe_mostrarplantilla', { 'id': p.id }) }}" title="Usar" class="btn btn-default btn-xs">
                        <span class="text-primary">{{ icon('list') }}</span>  Usar
                    </a>
				</td>
			</tr>
			{% endfor %}

		</tbody>
	    </table>
            <p>
				<a href="{{ path('informe_home') }}" class="btn btn-primary">Cancelar</a>
            </p>

	</div>

	<div id="div_filtros" style="display: none;">{# filtros #}

		<form class="form-horizontal"  action= "{{path('informe_mostrarfiltros')}}" method="POST">


			<div class="form-group" >{# fecha desde #}
				<label class="col-lg-3 control-label">Fecha Desde</label>
				<div class="col-lg-7 row">
					<div class="col-xs-4">
						<input class="form-control" type="date" name="fecha_desde" />
						<span class="help-block">Formato dd-mm-aaaa</span>
					</div>
					<label class="col-xs-3 control-label">Fecha Hasta</label>
					<div class="col-xs-4">
						<input class="form-control" type="date" name="fecha_hasta" />
						<span class="help-block">Formato dd-mm-aaaa</span>
					</div>
				</div>
			</div>
			<div class="form-group">{# hora desde/ hora hasta #}
				<label class="col-lg-3 control-label">Hora Desde</label>
				<div class="col-lg-7 row">
					<div class="col-xs-4">
						<input class="form-control" type="time" name="hora_desde" />
						<span class="help-block">Formato hh:mm</span>
					</div>
					<label class="col-xs-3 control-label">Hora Hasta</label>
					<div class="col-xs-4">
						<input class="form-control" type="time" name="hora_hasta" />
						<span class="help-block">Formato hh:mm</span>
					</div>

				</div>
			</div>

			<div class="form-group">
			<label class="col-lg-3 control-label">Filtrar por</label>
				<div class="col-lg-7 row">
					<div class="col-lg-8">
						<div class="btn-group" data-toggle="buttons">
							<label class="btn btn-default"><input type="radio" name="filtro1" value="4" onchange="mostrarOficina()">Oficina</label>
							<label class="btn btn-default"><input type="radio" name="filtro1" value="5" onchange="mostrarusuarioespecifico()">Usuario</label>
							<label class="btn btn-default"><input type="radio" name="filtro1" value="6" onchange="mostrarip()">IP</label>
							<label class="btn btn-default"><input type="radio" name="filtro1" value="7" onchange="mostrarrangoip()">Rango IP</label>
							<label class="btn btn-default active"><input type="radio" name="filtro1" value="0" onchange="ocultarfiltro1()" checked="checked">{{ icon('remove') }}</label>
						</div>
					</div>
					<div class="col-lg-4">
						<div class="btn-group" data-toggle="buttons">
							<label class="btn btn-default"><input type="radio" name="filtro2" value="9" onchange="mostrargrupo()">Grupo</label>
							<label class="btn btn-default"><input type="radio" name="filtro2" value="10" onchange="mostrarsitio()">Sitio</label>
							<label class="btn btn-default active"><input type="radio" name="filtro2" value="0" onchange="ocultarfiltro2()" checked="checked">{{ icon('remove') }}</label>
						</div>
					</div>

				</div>
			</div>



			<div class="form-group" id="div_oficina" style="display: none;">{# oficina #}
				<label class="col-lg-3 control-label">Oficina</label>
				<div class="col-lg-7">
					<select class="form-control" name="Oficina">
						<option value=""></option>
						{% for f in oficinas %}
						<option value="{{f.id}}">{{ f }}</option>
						{% endfor %}
					</select>
				</div>

			</div>

			<div class="form-group" id="div_usuario" style="display: none;">{# usuario #}
			<label class="col-lg-3 control-label">Usuario</label>
			<div class="col-lg-7">
				<select class="form-control" name="usuario">
					<option value=""></option>
					{% for u in usuarios %}
					<option value="{{u.id}}">{{ u }} </option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="form-group" id="div_ip" style="display: none;">{# ip #}
			<label class="col-lg-3 control-label">IP</label>
			<div class="col-lg-7 row">
				<div class="col-xs-3"> <input type="number" class="form-control" name="ip[0]" min="0" max="255" step="1" /></div>
				<div class="col-xs-3"> <input type="number" class="form-control" name="ip[1]" min="0" max="255" step="1" /></div>
				<div class="col-xs-3"> <input type="number" class="form-control" name="ip[2]" min="0" max="255" step="1" /></div>
				<div class="col-xs-3"> <input type="number" class="form-control" name="ip[3]" min="0" max="255" step="1" /> </div>
			</div>
		</div>


			<div id="div_rango" style="display: none;">
				<div class="form-group" >{# ip desde #}
					<label class="col-lg-3 control-label">IP Desde</label>
					<div class="col-lg-7 row">
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_desde[0]" min="0" max="255" step="1" /></div>
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_desde[1]" min="0" max="255" step="1" /></div>
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_desde[2]" min="0" max="255" step="1" /></div>
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_desde[3]" min="0" max="255" step="1" /> </div>
					</div>
				</div>
				<div class="form-group">{# ip hasta #}
					<label class="col-lg-3 control-label">IP Hasta</label>
					<div class="col-lg-7 row">
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_hasta[0]" min="0" max="255" step="1" /></div>
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_hasta[1]" min="0" max="255" step="1" /></div>
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_hasta[2]" min="0" max="255" step="1" /></div>
						<div class="col-xs-3"> <input type="number" class="form-control" name="ip_hasta[3]" min="0" max="255" step="1" /> </div>
					</div>
				</div>
			</div>

			<div class="form-group" id="div_grupo" style="display: none;">{# grupo sitios #}
				<label class="col-lg-3 control-label">Grupo</label>
				<div class="col-lg-7">
					<select class="form-control" name="grupo">
						<option value=""></option>
						{% for g in grupos %}
						<option value="{{g.id}}">{{ g }}</option>
						{% endfor %}
					</select>
				</div>
			</div>

		<div class="form-group" id="div_sitio" style="display: none;">{# sitios #}
			<label class="col-lg-3 control-label">Sitio</label>
			<div class="col-lg-7">
				<select class="form-control" name="sitio">
					<option value=""></option>
					{% for s in sitios %}
					<option value="{{s.id}}">{{ s }} ( {{s.grupo.nombre}} )</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="form-group" >{# trafico denegado #}
			<div class="col-lg-offset-3 col-lg-7">
				<div class="checkbox">
					<label><input type="checkbox" name="traficoDenegado" /> Solo trafico denegado</label>
				</div>
			</div>
		</div>
			<div class="col-lg-offset-3 col-lg-7">
				<p>
					<button type="submit"class="btn btn-primary">Generar</button>
					<a href="{{ path('informe_home') }}" class="btn btn-default">Cancelar</a>
				</p>
			</div>

		</form>
	</div>

{% endblock %}
