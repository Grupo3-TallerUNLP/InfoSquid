{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Eliminar Oficina</h3>
    </div>

     <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>{{ entity.nombre }}</dd>

	   <dt>Descripcion</dt>
       <dd>{{ entity.descripcion }}</dd>

		<dt>Ubicacion</dt>
        <dd>{{ entity.ubicacion }}</dd>

		<dt>Director</dt>
        <dd>{{ entity.director }}</dd>

		{% if entity.usuariosdered|length > 0 %}
			<dt>Usuarios de Red</dt>
		{% for user in entity.usuariosdered %}
			<dd>{{ user}}</dd>
		{% endfor %}
		{% endif %}

		{% if entity.hosts|length > 0 %}
			<dt>Hosts</dt>
		{% for host in entity.hosts %}
			<dd>{{ host}}</dd>
		{% endfor %}
		{% endif %}
		{% if plantilla %}
			<dt>Plantillas</dt>
			{% for p in plantilla %}
				<dd>{{ p}}</dd>
			{% endfor %}
		{% endif %}
    </dl>

   <div class="col-md-offset-1">
        {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit) }}
            <a href="{{ path('oficina') }}" class="btn btn-default">Cancelar</a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
