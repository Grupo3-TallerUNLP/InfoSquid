{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Editar Oficina</h3>
    </div>

    {{ form_start(edit_form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 7 }) }}
		{{form_errors(edit_form)}}

		{{ form_row(edit_form.nombre) }}
        {{ form_row(edit_form.descripcion) }}
        {{ form_row(edit_form.ubicacion) }}
        {{ form_row(edit_form.director) }}

        <div class="col-lg-offset-3 col-lg-7">
            <p>
                {{ form_widget(edit_form.submit) }}
                <a href="{{ path('oficina') }}" class="btn btn-default">Cancelar</a>
            </p>
        </div>

	{{ form_end(edit_form) }}
{% endblock %}
