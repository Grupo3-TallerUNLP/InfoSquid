{% extends '::dashboard.html.twig' %}

{% block content %}
    <div class="page-header">
        <h3>Grupo</h3>
    </div>

    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>{{ entity.nombre }}</dd>
		
		<dt>Descripcion</dt>
        <dd>{{ entity.descripcion }}</dd>
		
		
		{% if entity.sitios|length > 0 %}
			<dt>Sitios</dt>
		{% for sitio in entity.sitios %}
			<dd>{{ sitio}}</dd>
		{% endfor %}
		{% endif %}
		{% if plantilla %}
			<dt>Plantillas</dt>
			{% for p in plantilla %}
				<dd>{{ p}}</dd>
			{% endfor %}
		{% endif %}
    
	</dl>
	 
	<div class="col-md-offset-1">
            <a href="{{ path('grupo') }}" class="btn btn-primary">Volver</a>
    </div>
	
{% endblock %}
